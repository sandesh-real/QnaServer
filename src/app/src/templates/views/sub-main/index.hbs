        const url=window.location.href.slice(0,-10)+"sub-main";
        
        const Urls=url+hiddenpara.innerText;
         window.history.replaceState(null,null,Urls);
      }
   
  
  </script>
  <script src="js/shared.js"></script>
</body>
</html>